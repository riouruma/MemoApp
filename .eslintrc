{
  "extends": "airbnb",

  "rules": {
    "react/jsx-filename-extension": [1, {
      "extensions": [".js", ".jsx"]
    }],
    "no-use-before-define": ["error", {
      "variables": false
    }],
    "react/prefer-stateless-function": [false],
    "react/prop-types": [false],
    "react/jsx-no-bind": [false]
  },

  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".ios.js",
          ".android.js"
        ]
      }
    }
  },
  "env": {
    "node": true
  }
}
